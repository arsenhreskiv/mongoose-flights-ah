<%- include('../partials/header') %>
 
  <label >Flight #:</label>
  <select name="flightId">
    <%- flights.map(f =>
    `<option value="${f._id}">${f.flightNo}</option>`
    ).join(``) %>
  </select>

<form id="addTicket" action="/flights/<%= flight._id %>" method="POST">

  <label>Seat:</label>
  <input name="seat" required pattern="[A-F][1-9]\d?">
  <label>Price:</label>
  <input type="number" name="price">
  <input type="submit" value="Add Information">
</form>

<%- include('../partials/footer') %>
